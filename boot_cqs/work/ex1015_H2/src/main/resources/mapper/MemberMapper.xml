<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.MemberMapper">
<!-- 인터페이스에 있는 mapper경로 및 메서드명 일치시켜야 한다-->

	<!-- 회원 전체 목록 조회 -->
	<select id="selectAll">
        SELECT * FROM member
	</select>

    <!-- 회원 전체 수 조회 -->
    <select id="selectAllCount">
        SELECT COUNT(*) FROM member
    </select>

    <!-- 회원 추가 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="member.id" keyColumn="id">
    <!-- useGeneratedKeys="true" + keyProperty="member.id" + keyColumn="id" : "id"를 PK 할당 -->
        INSERT INTO member(name, email, age) VALUES(#{member.name}, #{member.email}, #{member.age})
    </insert>

    <!-- 이메일 주소로 회원 조회 -->
    <select id="selectByEmail">
        SELECT * FROM member WHERE email= #{email}
    </select>

</mapper>