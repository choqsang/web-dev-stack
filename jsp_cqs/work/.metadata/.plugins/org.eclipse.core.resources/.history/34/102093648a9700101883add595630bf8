<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="d">
	
	<select id="dept_list" resultType="vo.DeptVO"> 
		SELECT * FROM dept
	</select>
  
  	<insert id="dept_insert" parameterType="vo.DeptVO">
  		INSERT INTO dept VALUES( seq_dept_no.nextVal, #{dname}, #{loc})  
  	</insert>
  	
  	<delete id="dept_del" parameterType="int">
  		DELETE FROM dept WHERE deptno = #{deptno}
  	</delete>
  	
  	<update id="dept_update" parameterType="vo.DeptVO">
  		UPDATE dept SET dname = #{dname}, loc = #{loc} WHERE deptno = #{deptno}
  	</update>


</mapper>












