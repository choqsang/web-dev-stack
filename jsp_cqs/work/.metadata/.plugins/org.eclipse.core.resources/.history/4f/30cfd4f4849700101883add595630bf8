package dao;

import org.apache.ibatis.session.SqlSessionFactory;

public class DeptDAO {
	
	SqlSessionFactory factory;
	// single-ton pattern: 
	// 객체 1개만 생성해서 지속적으로 서비스하자
	static DeptDAO single = null;

	public static DeptDAO getInstance() {
		//생성되지 않았으면 생성
		if (single == null)
			single = new DeptDAO();
		//생성된 객체정보를 반환
		return single;
	}
}
