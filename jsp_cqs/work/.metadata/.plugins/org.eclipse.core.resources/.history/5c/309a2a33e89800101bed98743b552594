<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="m">

	<select id="member_select" resultType="vo.Member">
		select * from member order by idx desc
	</select>
	
	<insert id="member_register" parameterType="vo.Member">
		insert into member values(seq_member_idx.nextVal, #{name}, #{id}, #{pwd}, #{email}, #{addr})
	</insert>
	
	<delete id="member_delete" parameterType="int">
		delete from member where idx = #{idx}
	</delete>
	
	<select id="member_select_one" parameterType="int" resultType="vo.Member">
		select * from member where idx = #{idx}
	</select>
	
	<select id="selectOne" parameterType="String" resultType="vo.Member">
		select * from member where idx = #{idx}
	</select>
	
	<update id="member_modify" parameterType="vo.Member">
		update member set name = #{name}, id = #{id}, pwd = #{pwd}, email = #{email}, addr = #{addr}
		where idx = #{idx}
	</update>

</mapper>












